  -#.row-fluid
  .row-fluid
    #subscriptions.span3
      .sidebar-nav
        %ul.nav-list.nav
          %li.active <a href="#{root_path}"><i class="icon-home"></i> All items</a>
          %li <a href="#"><i class="icon-star"></i> Starred items</a>
          %li.divider
  
        %ul.nav-list.nav
          %li.nav-header{:'data-toggle' => 'collapse-next'} <i class="icon-folder-close"></i>Sidebar
