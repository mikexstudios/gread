          %li <a href="#">Link</a>
          %li <a href="#">Link</a>
          %li <a href="#">Link</a>
  
        %ul.nav-list.nav
          %li.nav-header{:'data-toggle' => 'collapse-next'} <i class="icon-folder-close"></i>Sidebar
        %ul.nav-list.nav.collapse.in
          %li <a href="#">Link</a>
          %li <a href="#">Link</a>
          %li <a href="#">Link</a>
  
        %ul.nav-list.nav
          %li.nav-header{:'data-toggle' => 'collapse-next'} <i class="icon-folder-close"></i>Sidebar
        %ul.nav-list.nav.collapse.in
          %li <a href="#">Link</a>
          %li <a href="#">Link</a>
          %li <a href="#">Link</a>
    
    -# To the right of the left sidebar
    #viewer.span13
      = yield

= render :template => 'layouts/application'
